<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <item >
        <shape android:shape="oval">

            <solid
                android:color="#88ffffff">
            </solid>

            <size
                android:height="50dp"
                android:width="50dp"
                />

        </shape>
    </item>

    <item >
        <shape android:shape="ring" android:innerRadiusRatio="3">

            <solid
                android:color="#88ffffff">
            </solid>

            <size
                android:height="50dp"
                android:width="50dp"
                />

        </shape>
    </item>

    </layer-list>